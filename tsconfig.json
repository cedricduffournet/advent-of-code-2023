{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist/",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "esnext",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/"
  ]
}